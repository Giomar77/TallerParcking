<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.giomar.tallerparcking.SalidaActivity">


    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Salida"
            android:textAlignment="center"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/tv_placa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Placa"

            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/edt_hs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de salida (24hrs)"
            android:layout_marginTop="50dp"
            android:inputType="time"

            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_salva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Ver precio" />

        <TextView
            android:id="@+id/tv_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="$"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Volver" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
